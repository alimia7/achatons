rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is owner
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Seller logos - authenticated users can upload their own logos
    match /seller-logos/{fileName} {
      // Users can read any seller logo (for display)
      allow read: if true;
      
      // Users can upload their own logo (file name should contain their uid)
      allow write: if isAuthenticated() && 
                      (request.resource.size < 2 * 1024 * 1024) && // Max 2MB
                      (request.resource.contentType.matches('image/.*'));
      
      // Users can delete their own logos
      allow delete: if isAuthenticated();
    }
    
    // Lecture publique des images produits
    match /product-images/{fileName} {
      // Everyone can read product images
      allow read: if true;

      // Écriture réservée aux utilisateurs connectés, images < 10MB
      allow write: if request.auth != null
                    && request.resource.size < 10 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

